{
  "manifest_version": 3,
  "name": "F-B Hide Recommendations and Reels",
  "version": "2.0.0",
  "description": "This extension hides Reels and recommendations on facebook",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://m.facebook.com/*",
    "https://chrome-facebook-hide-ads-and-reels.mrincops.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo-16x16.png",
      "48": "logo-48x48.png",
      "128": "logo-128x128.png"
    }
  },
  "icons": {
    "16": "logo-16x16.png",
    "24": "logo-24x24.png",
    "32": "logo-32x32.png",
    "48": "logo-48x48.png",
    "64": "logo-64x64.png",
    "96": "logo-96x96.png",
    "128": "logo-128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://m.facebook.com/*",
        "https://chrome-facebook-hide-ads-and-reels.mrincops.net/diag/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}